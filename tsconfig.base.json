{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "lib": ["ES2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "importHelpers": true,
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "declaration": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@app/front": ["./apps/front/tsconfig.json"]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "apps/front"
    }
  ]
}
